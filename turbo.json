{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"]
    },
    "@sherpa/build": {
      "env": ["NEXT_PUBLIC_GITHUB_URL"]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "dependsOn": ["^build"]
    },
    "check:lint": {
      "cache": false
    },
    "check:types": {
      "cache": false
    },
    "test": {
      "cache": false,
      "dependsOn": ["^build"]
    }
  }
}
